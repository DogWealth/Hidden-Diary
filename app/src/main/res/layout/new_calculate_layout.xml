        app:layout_constraintBottom_toTopOf="@id/horizontal_divider_72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider_25"
        tools:ignore="HardcodedText" />

